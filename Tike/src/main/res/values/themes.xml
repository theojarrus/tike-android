<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Tike" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="eventTitleColor">@color/light_blue_black</item>
        <item name="eventDividerColor">@color/lighter_gray</item>
        <item name="eventBackgroundColor">@color/blue_white</item>
        <item name="primaryBackgroundColor">@color/background_main_light</item>
        <item name="secondaryBackgroundColor">@color/background_secondary_light</item>
        <item name="navigationIconsColor">@color/lighter_gray</item>
        <item name="android:windowBackground">?attr/primaryBackgroundColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/primaryBackgroundColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Tike.BottomSheetDialogStyle</item>
    </style>

    <style name="Theme.Tike.Splash" parent="Theme.Tike">
        <item name="android:windowBackground">@drawable/splash_background_light</item>
    </style>

    <style name="Theme.Tike.BottomSheetDialogStyle" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.Tike.BottomSheetDialogStyle.Modal</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.Tike.BottomSheetDialogStyle.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="Theme.Tike.Toolbar.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Tike.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
        <item name="searchHintIcon">@null</item>
        <item name="queryHint">@string/search</item>
        <item name="iconTint">@color/blue</item>
    </style>

    <style name="Theme.Tike.InfoView" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_empty_view</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="Theme.Tike.BlueButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Tike.CounterButton" parent="Theme.Tike.BlueButton">
        <item name="android:backgroundTint">?attr/primaryBackgroundColor</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">15dp</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">-2dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Toggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">1dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/selector_text</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">@color/blue</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Tike.EventButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="elevation">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="Theme.Tike.EventButton.Action" parent="Theme.Tike.EventButton">
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Tike.EventButton.Accept" parent="Theme.Tike.EventButton">
        <item name="icon">@drawable/ic_accept</item>
        <item name="iconTint">@color/green</item>
        <item name="strokeColor">@color/green</item>
        <item name="rippleColor">@color/green</item>
    </style>

    <style name="Theme.Tike.EventButton.Reject" parent="Theme.Tike.EventButton">
        <item name="icon">@drawable/ic_close</item>
        <item name="iconTint">@color/red</item>
        <item name="strokeColor">@color/red</item>
        <item name="rippleColor">@color/red</item>
    </style>

    <style name="Theme.Tike.BlueButton.Basic" parent="Theme.Tike.BlueButton">
        <item name="android:backgroundTint">@color/selector_button_blue_bg</item>
        <item name="android:textColor">@color/selector_button_blue_text</item>
        <item name="strokeColor">@color/blue</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Iconified" parent="Theme.Tike.BlueButton.Basic">
        <item name="iconTint">@color/selector_button_blue_text</item>
        <item name="iconGravity">start</item>
        <item name="iconPadding">-24dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Action.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">15dp</item>
        <item name="strokeColor">?attr/colorAccent</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Tike.BlueButton.Action.Filled" parent="Theme.Tike.BlueButton.Action.Outlined">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="rippleColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Tike.BlueButton.Action.Texted" parent="Theme.Tike.BlueButton.Action.Filled">
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="iconPadding">6dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Switch" parent="Theme.Tike.BlueButton">
        <item name="android:backgroundTint">@color/selector_switch_blue_bg</item>
        <item name="android:textColor">@color/selector_switch_blue_text</item>
        <item name="strokeColor">@color/selector_switch_blue_bg</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Switch.Left" parent="Theme.Tike.BlueButton.Switch">
        <item name="shapeAppearance">@style/Theme.Tike.BlueButton.Switch.LeftAppearance</item>
    </style>

    <style name="Theme.Tike.BlueButton.Switch.Right" parent="Theme.Tike.BlueButton.Switch">
        <item name="shapeAppearance">@style/Theme.Tike.BlueButton.Switch.RightAppearance</item>
    </style>

    <style name="Theme.Tike.BlueButton.Switch.LeftAppearance">
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeBottomLeft">15dp</item>
    </style>

    <style name="Theme.Tike.BlueButton.Switch.RightAppearance">
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="Theme.Tike.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/blue</item>
    </style>

    <style name="Theme.Tike.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Tike.Date.WeekDay" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.Tike.Date.Day" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/selector_date_text_day</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tike.Date.Today" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/selector_date_text_today</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tike.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoMedium" parent="Theme.Tike.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoRegular" parent="Theme.Tike.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoLight" parent="Theme.Tike.TextView">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="Theme.Tike.TextView.RobotoThin" parent="Theme.Tike.TextView">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>
</resources>
